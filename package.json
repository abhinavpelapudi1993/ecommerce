{
  "name": "ecommerce",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "storybook": "turbo run storybook",
    "start:all": "bash scripts/start-all.sh",
    "start:backend": "bash scripts/start-backend.sh",
    "start:frontend": "bash scripts/start-frontend.sh",
    "test:e2e": "npx playwright test --config=e2e/playwright.config.ts"
  },
  "packageManager": "npm@11.6.2",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.3.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.55.0"
  }
}
